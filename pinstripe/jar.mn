# These really should be override directives instead of replacements, but we don't have camino.jar,
# and registering new chrome packages for each jar in order to have the override directives use the
# new chrome packages seems silly when replacing things is so much simpler. 

toolkit.jar:
# Replace the generic Toolkit license and crashes.xhtml with ones appropriate for Camino
*  content/global/license.html                             (/toolkit/content/license.html)
+  content/global/crashes.xhtml                            (../embed-replacements/content/global/crashes.xhtml)
# The default CSS for about:plugins is in content; override it to make sure nothing bleeds through.
+  content/global/plugins.css                              (../embed-replacements/content/global/plugins.css)
# Uh, yeah.  On 1.9.3, this can move to classic.jar, though; see bug 520364.
+  content/global/aboutMemory.css                          (../embed-replacements/skin/classic/global/aboutMemory.css)

classic.jar:
# Override Firefox-styled theme files with those appropriate for Camino
+  skin/classic/global/about.css                           (../embed-replacements/skin/classic/global/about.css)
+  skin/classic/global/config.css                          (../embed-replacements/skin/classic/global/config.css)
+  skin/classic/global/netError.css                        (../embed-replacements/skin/classic/global/netError.css)
+  skin/classic/global/dirListing/dirListing.css           (../embed-replacements/skin/classic/global/dirListing/dirListing.css)
+  skin/classic/global/dirListing/folder.png               (../embed-replacements/skin/classic/global/dirListing/folder.png)
+  skin/classic/global/dirListing/local.png                (../embed-replacements/skin/classic/global/dirListing/folder.png)
+  skin/classic/global/dirListing/remote.png               (../embed-replacements/skin/classic/global/dirListing/remote.png)
+  skin/classic/global/dirListing/up.png                   (../embed-replacements/skin/classic/global/dirListing/up.png)
+  skin/classic/global/icons/blacklist.png                 (../embed-replacements/skin/classic/global/icons/blacklist.png)
+  skin/classic/global/icons/warning.png                   (../embed-replacements/skin/classic/global/icons/warning.png)

en-US.jar:
# Replace generic files with ones appropriate for Camino
+ locale/en-US/global/config.dtd                           (../embed-replacements/locale/en-US/global/config.dtd)
+ locale/en-US/global/netError.dtd                         (../embed-replacements/locale/en-US/global/netError.dtd)
